<%- contentFor('body') %>

<header class="header-loja text-light text-center py-5">
    <h1 class="display-4">Bem-vindo Ã  Nossa Loja de Celulares!!</h1>
    <p class="lead">Encontre seu par perfeito e conquiste o asfalto!</p>
</header>
<main class="container my-5">
    <div class="row">
        <% produtos.forEach(produto => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img height="500px" src="<%= produto.foto || '/static/uploads/default.jpg' %>" class="card-img-top" alt="<%= produto.nome %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= produto.nome %></h5>
                        <p class="card-text"><%= produto.descricao %></p>
                        <p class="card-text">R$<%= produto.preco.toFixed(2) %></p>
                        <a href="#" class="btn btn-custom">Adicionar ao Carrinho</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<footer class="bg-dark text-white text-center py-4">
